{
  "name": "artefactor-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "bn": "npm-run babel-node $@",
    "test": "npm run fix && npm run cover",
    "ava": "ava",
    "lint": "xo",
    "fix": "xo --fix -- -s",
    "watch": "npm-watch",
    "test:watch:debug": "DEBUG=ava:watcher npm test -- --watch --verbose",
    "cover": "npm run nyc:cover",
    "cover:watch": "npm run nyc:cover:watch",
    "cover:display": "npm run nyc:cover:display",
    "coveralls": "npm-run nyc report --reporter=text-lcov | npm-run coveralls",
    "nyc:report": "npm run nyc:report:html",
    "nyc:report:html": "nyc report --reporter=html",
    "nyc:report:text": "nyc report --reporter=text",
    "nyc:report:lcov": "nyc report --reporter=lcov",
    "nyc:report:text-lcov": "nyc report --reporter=text-lcov",
    "nyc:cover": "nyc ava",
    "nyc:cover:display": "open coverage/index.html",
    "nyc:cover:watch": "nodemon --quiet --watch src --exec npm run nyc:cover -s",
    "plato:report": "npm-run plato -r -d report src",
    "plato:report:display": "open report/index.html",
    "docs": "npm run docs:html && npm run docs:md",
    "docs:html": "documentation build ./index.js -f html -o documentation/lib/html",
    "docs:html:display": "open documentation/lib/html/index.html",
    "docs:md": "documentation build ./index.js -f md > documentation/lib/md/API.md",
    "docs:md:display": "open documentation/lib/md/API.md"
  },
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": true
    }
  },
  "xo": {
    "esnext": true,
    "parser": "babel-eslint",
    "semicolon": false,
    "reporter": "compact",
    "plugins": [
      "filenames"
    ],
    "rules": {
      "filenames/match-regex": [
        2,
        "^[a-z-\\.]+$",
        true
      ]
    }
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },  
  "dependencies": {
    "apollo-client": "^0.4.21",
    "babel-polyfill": "^6.13.0",
    "bluebird": "^3.4.6",
    "co": "^4.6.0",
    "core-decorators": "^0.13.0",
    "cradle": "github:kristianmandrup/cradle#promised-land",
    "dataloader": "^1.2.0",
    "debug": "^2.2.0",
    "artifactor-routes": "kristianmandrup/artifactor-routes#master",
    "faker": "kristianmandrup/faker.js#master",
    "fs-promise": "^0.5.0",
    "graphql": "^0.7.2",
    "javascript-decorators": "^1.0.1",
    "json-schema-faker": "github:kristianmandrup/json-schema-faker#master",
    "jsonfile": "^2.3.1",
    "jsonschema": "^1.1.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-convert": "^1.2.0",
    "koa-graphql": "^0.5.6",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.3.0",
    "koa-onerror": "^1.2.1",
    "koa-pug": "^3.0.0-0",
    "koa-qs": "^2.0.0",
    "koa-router": "^7.0.0",
    "koa-static": "^3.0.0",
    "koa-strong-params": "0.0.3",
    "koa-views": "^5.0.2",
    "lodash-decorators": "^3.0.1",
    "mocha-test-dsl": "^0.3.2",
    "mongoose": "^4.6.0",
    "mongoose-validator": "^1.2.5",
    "node-dir": "^0.1.16",
    "pouch-clerk": "^0.3.6",
    "promisify-node": "^0.4.0",
    "pug": "^2.0.0-beta6",
    "runkoa": "^1.3.1",
    "schema-couch": "github:kristianmandrup/schema-couch#master",
    "url-join": "^1.1.0",
    "vue-apollo": "^1.0.0-rc.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "ava-spec": "^1.0.1",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-regenerator": "^6.14.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2017": "^6.14.0",
    "babel-preset-latest-minimal": "^1.1.2",
    "babel-register": "^6.18.0",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "coveralls": "^2.11.14",
    "documentation": "^4.0.0-beta11",
    "eslint": "^3.9.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-filenames": "^1.1.0",
    "flow-bin": "^0.34.0",
    "gulp": "^3.9.1",
    "mocha": "^3.0.2",
    "mocha-test-dsl": "^0.3.0",
    "mock-fs": "^3.11.0",
    "moment": "^2.15.2",
    "nodemon": "^1.11.0",
    "npm-run": "^4.1.0",
    "npm-watch": "^0.1.6",
    "nyc": "^8.4.0",
    "plato": "^1.7.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "superagent": "^2.2.0",
    "superagent-promise": "^1.1.0",
    "testdouble": "^1.9.0",
    "webpack": "^1.13.3",
    "webpack-node-externals": "^1.5.4",
    "xo": "^0.17.0"    
  }
}
